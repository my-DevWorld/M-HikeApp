<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/obj_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/hikeImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/obj_230"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/hikeName_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hikeImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/obj_8"
        android:paddingStart="@dimen/obj_10"
        tools:text="Hike Name | Location"
        android:fontFamily="@font/gilroybold"
        android:textSize="@dimen/textSize_22"/>

    <TextView
        android:id="@+id/hikeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hikeName_location"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/obj_5"
        android:paddingStart="@dimen/obj_10"
        android:fontFamily="@font/gilroysemibold"
        tools:text="Date ∙ 3 km ∙ 3 Hikers"
        android:textSize="@dimen/textSize_14"
        android:textColor="@color/brownGrey"
        />

    <ImageView
        android:id="@+id/share"
        android:layout_width="@dimen/obj_24"
        android:layout_height="@dimen/obj_24"
        app:layout_constraintTop_toTopOf="@+id/hikeName_location"
        app:layout_constraintBottom_toBottomOf="@+id/hikeName_location"
        app:layout_constraintEnd_toStartOf="@+id/editHike"
        android:layout_marginTop="@dimen/obj_8"
        android:layout_marginEnd="@dimen/obj_16"
        android:src="@drawable/ic_share"
        />
    <ImageView
        android:id="@+id/editHike"
        android:layout_width="@dimen/obj_24"
        android:layout_height="@dimen/obj_24"
        app:layout_constraintTop_toTopOf="@+id/share"
        app:layout_constraintBottom_toBottomOf="@+id/share"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/obj_24"
        android:src="@drawable/ic_edit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>