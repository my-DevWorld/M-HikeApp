        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/autocomplete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/obj_54"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/searchProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/obj_16"
                android:layout_toStartOf="@+id/search_icon"
                android:fontFamily="@font/gilroymedium"
                android:gravity="center_vertical"
                android:hint="@string/search_hike_name"
                android:textColor="@color/blackText"
                android:textSize="@dimen/textSize_15" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="@dimen/obj_24"
                android:layout_height="@dimen/obj_24"
                android:layout_toStartOf="@+id/menu_icon"
                android:layout_marginStart="@dimen/obj_20"
                android:layout_marginEnd="@dimen/obj_8"
                android:src="@drawable/ic_baseline_search_24"
                android:contentDescription="@string/search_hike_name"/>

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="@dimen/obj_24"
                android:layout_height="@dimen/obj_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/obj_8"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/search_hike_name"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

